{% set pageUrl = page.url | toAbsoluteUrl %}

{# General #}
<meta name="description" content="{{ description or meta.description }}">
<link rel="canonical" href="{{ pageUrl }}">
<meta name="author" content="{{ meta.author }}">
<meta name="generator" content="{{ eleventy.generator }}">

{# Open Graph #}
<meta property="og:site_name" content="{{ meta.title }}">
<meta property="og:title" content="{{ title or meta.title }}">
<meta property="og:description" content="{{ description  or meta.description }}">
<meta property="og:url" content="{{ pageUrl }}">
<meta property="og:locale" content="{{ meta.locale }}">
<meta name="twitter:card" content="{% if meta.image -%}summary_large_image{% else %}summary{% endif %}">
{%- if meta.image -%}
  <meta property="og:image" content="{{ meta.image | url | absoluteUrl(meta.url) }}">
{%- endif -%}

{# Favicon #}
<link rel="icon" href="/assets/favicons/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="{{ './assets/favicon/apple-touch-icon.png' | toAbsoluteUrl }}">
<link rel="icon" type="image/png" href="{{ './assets/favicon/favicon-32x32.png' | toAbsoluteUrl }}" sizes="32x32">
<link rel="icon" type="image/png" href="{{ './assets/favicon/favicon-16x16.png' | toAbsoluteUrl }}" sizes="16x16">
<link rel="shortcut icon" href="{{ './assets/favicon/favicon.ico' | toAbsoluteUrl }}">
<link rel="manifest" href="{{ './site.webmanifest' | toAbsoluteUrl }}">
{%- if meta.themeColor -%}
  <meta name="theme-color" content="{{ meta.themeColor }}">
{%- endif -%}